#include <stdio.h>

int main() {
    int ONOFF;

    printf ("Enter 0 for OFF, 1 for ON: ");
    scanf ("%d", &ONOFF);

    switch (ONOFF) {
        case 0:
            printf("The electric switch is OFF.\n");
            break;
        case 1:
            printf("The electric switch is ON.\n");
            break;
        default:
            printf("Invalid input. Please enter 0 or 1.\n");
            break;
    }
